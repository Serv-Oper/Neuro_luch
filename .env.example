# Telegram
BOT_TOKEN=your-telegram-bot-token-here

# API Reference IO
IO_API_KEY=your-intelligence-io-api-key-here

# Бесплатный лимит запросов в сутки
FREE_DAILY_LIMIT=5

# Юзернейм техподдержки (без @)
SUPPORT_USERNAME=your_support_username

# Параметры подключения к MySQL
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# Почта и регистрация
EMAIL_FROM=your_email_address
EMAIL_PASSWORD=your_email_password
CONFIRM_CODE_EXP_MIN=15

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# URL-ы вашего локального веба (FastAPI)
REGISTER_URL=http://127.0.0.1:8000/register
GOOGLE_REDIRECT_URI=https://your-ngrok-or-domain/auth/google/callback

# Секрет для подписи JWT (для Web-модуля)
JWT_SECRET_KEY=your_jwt_secret_key_here

# Окружение: dev – пересоздаёт БД при старте, prod – не трогает схему
ENV=prod